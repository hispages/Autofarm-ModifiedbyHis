-- Auto Eat Script (sesuaikan dengan API gamemu)
local player = game.Players.LocalPlayer
local hunger = player:WaitForChild("Hunger") -- contoh kalau ada Value Object

local function findFood(inv)
    -- cari makanan terbaik di inventory player
    local bestFood
    for _, item in pairs(inv:GetChildren()) do
        if item:IsA("Tool") and item:FindFirstChild("Nutrition") then
            if not bestFood or item.Nutrition.Value > bestFood.Nutrition.Value then
                bestFood = item
            end
        end
    end
    return bestFood
end

local function eatFood()
    local backpack = player:WaitForChild("Backpack")
    local food = findFood(backpack)
    if food then
        -- contoh mekanisme makan (disesuaikan dengan game kamu)
        food:Activate()
        print("Makan:", food.Name)
    end
end

-- loop auto makan
while true do
    task.wait(1) -- cooldown biar ga spam
    if hunger.Value >= 70 then -- kalau hunger udah tinggi (lapar)
        eatFood()
    end
end
